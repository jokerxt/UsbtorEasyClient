<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preference_screen">

    <PreferenceCategory android:title="Обновления на форуме">
        <SwitchPreference
            android:defaultValue="false"
            android:title="Уведомлять"
            android:key="switch_preference_1" />

        <ListPreference
            android:defaultValue="30"
            android:summary="%s"
            android:title="Проверять раз в..."
            android:entries="@array/namesTime"
            android:entryValues="@array/times"
            android:key="list_preference_1" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Настройка уведомлений">
        <SwitchPreference
            android:defaultValue="true"
            android:title="Вибрация"
            android:key="switch_preference_2" />

        <SwitchPreference
            android:defaultValue="true"
            android:title="Звук"
            android:key="switch_preference_3" />

    </PreferenceCategory>

</PreferenceScreen>